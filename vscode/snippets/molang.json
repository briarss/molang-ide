{
  "Ternary": {
    "prefix": "tern",
    "body": "${1:condition} ? ${2:then} : ${3:else}",
    "description": "Ternary expression"
  },
  "Loop": {
    "prefix": "loop",
    "body": "loop(${1:count}, {\n\t$0\n})",
    "description": "Loop expression"
  },
  "For Each": {
    "prefix": "foreach",
    "body": "for_each(${1:v.item}, ${2:v.array}, {\n\t$0\n})",
    "description": "For-each expression"
  },
  "Variable": {
    "prefix": "var",
    "body": "v.${1:name}",
    "description": "Variable reference"
  },
  "Temp Variable": {
    "prefix": "temp",
    "body": "t.${1:name}",
    "description": "Temp variable reference"
  },
  "Query": {
    "prefix": "query",
    "body": "q.${1:name}",
    "description": "Query reference"
  },
  "Math": {
    "prefix": "math",
    "body": "math.${1:function}(${2:args})",
    "description": "Math function call"
  },
  "Function Definition": {
    "prefix": "fn",
    "body": "fn('${1:name}', ${2:v.param}, {\n\t$0\n})",
    "description": "Define a function (extension)"
  },
  "If/Else": {
    "prefix": "if",
    "body": "if (${1:condition}) {\n\t${2}\n} else {\n\t${3}\n}",
    "description": "If/else block (extension)"
  },
  "Switch": {
    "prefix": "switch",
    "body": "switch(${1:v.value},\n\t${2:0}, { ${3:result} },\n\t{ ${4:default} }\n)",
    "description": "Switch expression (extension)"
  },
  "While": {
    "prefix": "while",
    "body": "while(${1:condition}, {\n\t$0\n})",
    "description": "While loop (extension)"
  },
  "Struct": {
    "prefix": "struct",
    "body": "v.${1:name} = struct()",
    "description": "Create a struct (extension)"
  },
  "Import": {
    "prefix": "import",
    "body": "import('${1:namespace}:${2:path}')",
    "description": "Import MoLang file (extension)"
  },
  "Return": {
    "prefix": "ret",
    "body": "return ${1:value}",
    "description": "Return expression"
  }
}
